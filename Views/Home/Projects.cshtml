
@{
    ViewData["Title"] = "Projects";
}

<section id="projects" class="projects-section py-12 bg-gray-100">
    <div class="container mx-auto text-center">
        <h2 class="text-3xl font-bold mb-8">My Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

            <div class="project-card bg-white p-6 rounded-2xl shadow-md hover:shadow-xl transition-transform hover:scale-105">
                <h3 class="text-xl font-semibold mb-2">Employee Management System</h3>
                <p class="text-sm text-gray-600 mb-3"><strong>Tech:</strong> ASP.NET MVC, C#, SSMS, Visual Studio</p>
                <ul class="text-left list-disc list-inside text-gray-700">
                    <li>Role-based system with authentication & authorization (ASP.NET Identity)</li>
                    <li>Operations for Admin, Managers, and Employees with SQL Server integration</li>
                    <li>Dashboards for role-based task management</li>
                    <li>Attendance module for employees with review by Admin/Managers</li>
                </ul>
            </div>

            <div class="project-card bg-white p-6 rounded-2xl shadow-md hover:shadow-xl transition-transform hover:scale-105">
                <h3 class="text-xl font-semibold mb-2">Student Management System</h3>
                <p class="text-sm text-gray-600 mb-3"><strong>Tech:</strong> ASP.NET MVC, C#, SSMS, Visual Studio</p>
                <ul class="text-left list-disc list-inside text-gray-700">
                    <li>Default Admin account seeded in the database for secure access</li>
                    <li>Implemented full CRUD operations for student management</li>
                    <li>Search bar functionality to quickly find students</li>
                </ul>
            </div>

        </div>
    </div>
</section>



